{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    {% for post in posts %}
        <h4><a href="/post/view/{{ post.id }}">{{ post.title }}</a></h4>
        <p>by {{ post.userId|username }}</p>
        <p><i>{{ post.createdAt|date }}</i></p>
        <p>{{ post.text|ellipsis }}</p>
{{ include('/delete/_delete.html.twig') }}
    <hr>
    {% else %}
    <p>There are no posts to view.</p>
    {% endfor %}
{% endblock %}
